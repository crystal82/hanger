<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <Button
        android:id="@+id/btnNext"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="0dp"
        android:text="@string/next"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/btnNext"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:gravity="center">

        <CheckBox
            android:id="@+id/cbSelect"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/checkbox_hook_selector"
            android:button="@null"/>

        <TextView
            android:id="@+id/tvSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/finished"
            android:textColor="@color/black"/>
    </LinearLayout>


    <TextView
        android:id="@+id/moudlechoose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/softreset"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:text="@string/moudlechoose"
        android:visibility="gone"/>

    <!--<com.uascent.jz.ua420r.view.GifView
        android:id="@+id/softreset"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:enabled="false" />-->
    <TextView
        android:id="@+id/softreset"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:enabled="false"
        android:gravity="center"
        android:text="确认设备进入连接状态"
        android:textColor="@color/black"
        android:textSize="@dimen/font_22sp"/>
    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l_head"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:text="@string/airlink_ready_message"/>
    <LinearLayout
        android:id="@+id/l_head"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" android:layout_marginTop="20dp" android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/text_circle_bg"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/line_color"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/text_circle_bg_blue"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/text_circle_bg"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/line_color"
            android:textSize="20sp"/>
    </LinearLayout>

</RelativeLayout>