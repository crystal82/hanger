<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bg"
              android:orientation="vertical"
              android:paddingTop="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:text="湿度50%"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/font_26sp"/>

        <TextView
            android:id="@+id/tv_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="温度26℃"
            android:textColor="@color/darkYellow"
            android:textSize="@dimen/font_26sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_control_sz"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/selector_white_circle_color"
                android:src="@mipmap/control_sz"/>

            <TextView
                android:id="@+id/tv_sz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/iv_control_sz"
                android:layout_alignStart="@+id/iv_control_sz"
                android:layout_below="@+id/iv_control_sz"
                android:gravity="center_horizontal"
                android:text="设置"
                android:textColor="@color/textGray"
                android:textSize="@dimen/control_font_18sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_control_yy"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/selector_white_circle_color"
                android:src="@mipmap/control_sy"/>

            <TextView
                android:id="@+id/tv_yy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/iv_control_yy"
                android:layout_alignStart="@+id/iv_control_yy"
                android:layout_below="@+id/iv_control_yy"
                android:gravity="center_horizontal"
                android:text="语音"
                android:textColor="@color/textGray"
                android:textSize="@dimen/control_font_18sp"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/shape_bg_control_">

            <LinearLayout
                android:id="@+id/ll_control"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:background="@drawable/shape_bg_control_"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_control_tz"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/selector_tz_color"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_control_ss"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_above="@id/ll_control"
                android:layout_centerInParent="true"
                android:src="@drawable/selector_ss_color"/>

            <ImageView
                android:id="@+id/iv_control_fg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/ll_control"
                android:orientation="vertical"
                android:src="@drawable/selector_fg_color"/>

            <TextView
                android:id="@+id/tv_fg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/iv_control_fg"
                android:layout_alignRight="@id/iv_control_fg"
                android:layout_below="@id/iv_control_fg"
                android:gravity="center_horizontal"
                android:text="风干"
                android:textColor="@color/white"
                android:textSize="@dimen/control_font_18sp"/>
            <ImageView
                android:id="@+id/iv_control_xj"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_below="@id/ll_control"
                android:layout_centerInParent="true"
                android:src="@drawable/selector_xj_color"/>

            <ImageView
                android:id="@+id/iv_control_hg"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/ll_control"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/selector_hg_color"/>

            <TextView
                android:layout_below="@id/iv_control_hg"
                android:layout_alignLeft="@id/iv_control_hg"
                android:layout_alignRight="@id/iv_control_hg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="烘干"
                android:textColor="@color/white"
                android:textSize="@dimen/control_font_18sp"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_control_xd"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/selector_blue_circle_color"
                android:src="@mipmap/control_xd"/>

            <TextView
                android:id="@+id/tv_xd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/iv_control_xd"
                android:layout_alignStart="@+id/iv_control_xd"
                android:layout_below="@+id/iv_control_xd"
                android:gravity="center_horizontal"
                android:text="消毒"
                android:textColor="@color/white"
                android:textSize="@dimen/control_font_18sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_control_gj"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/selector_blue_circle_color" android:src="@mipmap/control_gj"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/iv_control_gj"
                android:layout_alignStart="@+id/iv_control_gj"
                android:layout_below="@+id/iv_control_gj"
                android:gravity="center_horizontal"
                android:text="关机"
                android:textColor="@color/white"
                android:textSize="@dimen/control_font_18sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_control_zm"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/selector_blue_circle_color"
                android:src="@mipmap/control_zm"/>

            <TextView
                android:id="@+id/tv_zm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/iv_control_zm"
                android:layout_alignStart="@+id/iv_control_zm"
                android:layout_below="@+id/iv_control_zm"
                android:gravity="center_horizontal"
                android:text="照明"
                android:textColor="@color/white"
                android:textSize="@dimen/control_font_18sp"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>