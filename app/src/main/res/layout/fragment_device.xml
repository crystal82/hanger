<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_device"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_row"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:src="@mipmap/row_left"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:text="湿度50%"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/font_20sp"/>

        <TextView
            android:id="@+id/tv_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="温度26℃"
            android:textColor="@color/darkYellow"
            android:textSize="@dimen/font_20sp"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_hanger"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

        <ImageView
            android:id="@+id/iv_jt"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="-5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:src="@mipmap/dingbu"/>

        <!--顶部图标-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_alignTop="@+id/iv_jt"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <ImageView
                android:id="@+id/iv_fenggan"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:src="@mipmap/fenggan"/>
            <ImageView
                android:id="@+id/iv_xiaodu1"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:src="@mipmap/xiaodu"/>
            <ImageView
                android:id="@+id/iv_zhaoming"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:src="@mipmap/zhaoming"/>
            <ImageView
                android:id="@+id/iv_xiaodu2"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:src="@mipmap/xiaodu"/>
            <ImageView
                android:id="@+id/iv_honggan"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:src="@mipmap/honggan"/>
        </LinearLayout>

        <!--提示图标-->
        <LinearLayout
            android:id="@+id/ll_state_hint"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_below="@+id/iv_jt"
            android:layout_marginLeft="29dp"
            android:layout_marginRight="28dp">

            <ImageView
                android:id="@+id/iv_fenggan_hint1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/iv_xiaodu_hint1"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:src="@drawable/selector_xiaodu_icon"/>
            <ImageView
                android:id="@+id/iv_deng_hint"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginTop="-8dp"
                android:layout_weight="1"
                android:src="@drawable/selector_deng_icon"/>
            <ImageView
                android:id="@+id/iv_xiaodu_hint2"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:src="@drawable/selector_xiaodu_icon"/>
            <ImageView
                android:id="@+id/iv_fenggan_hint2"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"/>
        </LinearLayout>

        <!--底部架子-->
        <ImageView
            android:id="@+id/iv_lg"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ll_state_hint" android:clickable="true"
            android:src="@mipmap/jiazi"/>

        <!--伸缩弹簧-->
        <ImageView
            android:id="@+id/iv_ssj_left"
            android:layout_width="15dp"
            android:layout_height="42dp"
            android:layout_alignLeft="@+id/iv_jt"
            android:layout_alignStart="@+id/iv_jt"
            android:layout_below="@+id/iv_jt"
            android:layout_marginLeft="20dp"
            android:scaleType="fitXY"
            android:src="@mipmap/shensuo"/>
        <ImageView
            android:id="@+id/iv_ssj_right"
            android:layout_width="15dp"
            android:layout_height="42dp"
            android:layout_alignRight="@+id/iv_jt"
            android:layout_below="@+id/iv_jt"
            android:layout_marginRight="20dp"
            android:scaleType="fitXY"
            android:src="@mipmap/shensuo"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/iv_setting"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toLeftOf="@+id/iv_voice"
            android:background="@drawable/selector_white_circle_color"
            android:src="@mipmap/control_sz"/>
        <!--android:background="@drawable/selector_setting_color"
        android:src="@mipmap/control_sz_w"-->

        <TextView
            android:id="@+id/tv_sz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/iv_setting"
            android:layout_below="@+id/iv_setting"
            android:gravity="center_horizontal"
            android:text="设置"
            android:textColor="@color/white"
            android:textSize="@dimen/control_font_18sp"/>
        <ImageView
            android:id="@+id/iv_voice"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dimen_40dp"
            android:layout_marginRight="@dimen/dimen_40dp"
            android:background="@drawable/selector_white_circle_color"
            android:src="@mipmap/control_sy"/>
        <!--android:background="@drawable/selector_circle_color"
        android:src="@mipmap/control_sy_w"-->

        <TextView
            android:id="@+id/tv_yy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_sz"
            android:layout_alignBottom="@+id/tv_sz"
            android:layout_alignEnd="@+id/iv_voice"
            android:layout_alignStart="@+id/iv_voice"
            android:gravity="center_horizontal"
            android:text="语音"
            android:textColor="@color/white"
            android:textSize="@dimen/control_font_18sp"/>
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/iv_voice"
            android:background="@drawable/selector_blue_circle_color"
            android:src="@mipmap/control_gj"/>

        <!--android:background="@drawable/selector_close_color"
        android:src="@mipmap/control_gj"-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/iv_close"
            android:layout_alignRight="@+id/iv_close"
            android:layout_below="@+id/iv_close"
            android:gravity="center_horizontal"
            android:text="关机"
            android:textColor="@color/white"
            android:textSize="@dimen/control_font_18sp"/>
    </RelativeLayout>

</LinearLayout>
